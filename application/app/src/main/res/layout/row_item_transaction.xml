<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8sp"
    android:weightSum="4">

    <ImageView
        android:id="@+id/row_transaction_bar"
        android:layout_width="2sp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="8sp"/>

    <TextView
        android:id="@+id/row_transaction_category"
        style="@style/row_transaction_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18sp"
        android:gravity="start"
        android:layout_weight="2"
        android:text="@string/placeholder_category"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/row_transaction_amount"
        style="@style/row_transaction_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_weight="2"
        android:textAlignment="viewEnd"
        android:text="@string/placeholder_amount" />
</LinearLayout>
