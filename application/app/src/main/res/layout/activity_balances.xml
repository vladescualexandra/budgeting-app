<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
    tools:context=".settings.balances.AddBalanceActivity">

    <TextView
        android:id="@+id/balances_total"
        style="@style/total_balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="@string/default_total_balance"

        />

    <TextView
        android:id="@+id/balances_add"
        style="@style/total_balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="@string/plus_sign"
        android:textSize="26sp" />

    <ListView
        android:id="@+id/balances_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:padding="16sp"
        android:layout_marginTop="16sp"/>
</GridLayout>