<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.target.TargetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16sp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="32sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/target_target_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/target_target_header" />

                    <TextView
                        android:id="@+id/target_target_time_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/target_target_time_period" />

                    <TextView
                        android:id="@+id/target_target_spendings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/target_target_spendings" />

                    <TextView
                        android:id="@+id/target_target_savings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/target_target_savings" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/target_frame_chart_target"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="10sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/target_actual_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/target_actual_header" />

                    <TextView
                        android:id="@+id/target_actual_spendings_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/target_actual_spendings_percentage" />

                    <TextView
                        android:id="@+id/target_actual_spendings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/target_actual_spendings" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/target_frame_chart_actual"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_weight="1"
                    android:padding="10sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>